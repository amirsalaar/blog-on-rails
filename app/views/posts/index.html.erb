<section class="my-3 mx-auto mx-md-0 px-2 px-md-0">
<div class="row justify-content-sm-center justify-content-around">
    <% @posts.each do |post| %>
        <div class="card p-2 mb-2 mx-1 mx-lg-3 col-12 col-md-5 col-xl-3">
            <div class="card-body">
                <%= link_to "#{post.title}", post_path(post.id), class: 'h5' %>
                    <p><%= post.body %></p>
            </div>
        </div>
    <% end %>
</div>
</section>
